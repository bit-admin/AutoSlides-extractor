{
  "name": "autoslides-extractor",
  "version": "1.0.0",
  "description": "Automatic slide extract application",
  "main": "src/main/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "bit-admin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bit-admin/AutoSlides-extractor.git"
  },
  "devDependencies": {
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "electron-debug": "^4.1.0"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3"
  },
  "build": {
    "appId": "com.extractor.autoslides.app",
    "productName": "AutoSlides Extractor",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "asar": true,
    "compression": "maximum",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-${version}-macOS-${arch}.${ext}",
      "asarUnpack": [
        "node_modules/ffmpeg-static/ffmpeg",
        "node_modules/ffprobe-static/bin/darwin/arm64/ffprobe"
      ]
    },
    "dmg": {
      "background": "build/background.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico",
      "appId": "AutoSlides Extractor",
      "files": [
        "!node_modules/ffmpeg-static",
        "!node_modules/ffprobe-static"
      ],
      "extraResources": [
        {
          "from": "build/binaries/win-x64",
          "to": "bin",
          "filter": ["**/*"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AutoSlides Extractor",
      "perMachine": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": true,
      "artifactName": "${productName}-Setup-${version}-Windows-${arch}.${ext}"
    }
  }
}
